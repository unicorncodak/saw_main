{{ header }}
<div class="container main">
<div class="main">
    <div id="content">
    {{ content_top }}
        <ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
			<li> <a href="{{ breadcrumb['href'] }}"> {{ breadcrumb['text'] }} </a> </li>
		{% endfor %}
  </ul>
        <div class="testimonial-product">
        <div class="title-module">
            <div class="page-title"><h1>{{ heading_title }}</h1></div>
        </div>
		{% if testimonials %}
            <div class="testimonial-containers">
              		{% for testimonial in testimonials %}
				<div class="row-testimonials">
					<div class="testimonial-images col-sm-3 text-center"><img src="{{ testimonial['image'] }}" alt="{{ heading_title }}"></div>
					<div class="box-testimonial col-sm-9">
						<div class="testimonial-std">{{ testimonial['content'] }}</div>
						<div class="testimonial-name text-right"><h5>--{{ testimonial['customer_name'] }}--</h5></div>
					</div>
				</div>
              {% endfor %}
            </div>
            <div class="row toolbar4">
                <div class="col-sm-6 text-left">{{ pagination }}</div>
                <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
           {% else %}
            <p>{{ text_empty }}</p>
            <div class="buttons">
                <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
            </div>
           {% endif %}
        </div>
    </div>
</div>
    {{ content_bottom }}
</div>
{{ footer }}